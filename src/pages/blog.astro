---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPosts from "../components/BlogPosts.astro";

const allPosts = await Astro.glob("../pages/posts/*.md");
const titlePage = "Blog";

const bgColorPosts = "#474747";
---

<BaseLayout titlePage={titlePage}>
  <div class="posts">
    <h2>Read Ours Posts</h2>
    <ul>
      {
        allPosts.map((post) => (
          <BlogPosts url={post.url} titlePost={post.frontmatter.title} />
        ))
      }
    </ul>
  </div>
</BaseLayout>

<style define:vars={{ bgColorPosts }}>
  .posts {
    border-radius: 1rem;
    padding: 2.2rem;
    background-color: var(--bgColorPosts);

    ul {
      list-style: none;
    }

    a {
      color: white;
    }
  }
</style>
